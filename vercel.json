{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/telegram/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "25mb",
        "includeFiles": "api/telegram/requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/telegram/webhook.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/validate",
      "dest": "/api/telegram/validate.py",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}