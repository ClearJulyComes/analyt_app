{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/telegram/*.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "25mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "/api/telegram/analyze.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/save-userinfo",
      "dest": "/api/telegram/save-userinfo.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/get-userinfo",
      "dest": "/api/telegram/get-userinfo.py",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
