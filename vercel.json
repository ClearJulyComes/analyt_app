{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/analyze.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "25mb",
        "includeFiles": "api/requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "/api/analyze.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}