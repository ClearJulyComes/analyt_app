{
  "version": 2,
  "functions": {
    "api/telegram/*.py": {
      "runtime": "python@3.9",
      "maxDuration": 10,
      "memory": 512
    }
  },
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/telegram/webhook.py",
      "methods": ["POST"]
    },
    {
      "src": "/api/validate",
      "dest": "/api/telegram/validate.py",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
